{

  "description": "Allows you to copy a markdown or latex version of the content of any Wikipedia paragraph",
  "manifest_version": 2,
  "name": "Get Wiki - Markdown/Latex",
  "version": "0.3.1",
  "icons": {
    "48": "logo.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["copy.js", "index.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "getwiki@zanin.com",
      "strict_min_version": "42.0"
    }
  },

  "permissions" : [ "storage", "clipboardRead", "clipboardWrite" ],

  "options_ui": {
    "page": "options.html"
  }

}
